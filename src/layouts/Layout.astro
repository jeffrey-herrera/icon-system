<style is:global>
  :root {
    --braze-purple: #801ED7;
    --braze-action: #5710E5;
    --braze-purple-light: #7C3AED;
    --braze-purple-lighter: #A855F7;
    --braze-purple-dark: #300266;
    --braze-orange: #FFA524;
    --braze-pink: #FFA4FB;
  }

  body {
    font-family: 'AribauGrotesk', system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  }

  /* Ensure minimum touch target size */
  button, 
  [role="button"],
  input[type="checkbox"],
  input[type="radio"] {
    min-height: 44px;
    min-width: 44px;
  }

  /* Remove default focus styling and replace with custom */
  *:focus {
    outline: none;
  }
  
  /* Custom focus styles for inputs */
  input:focus,
  textarea:focus,
  select:focus {
    outline: none;
  }
</style> 